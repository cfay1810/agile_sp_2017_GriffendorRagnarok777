<h1>Listing user_profiles</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Gender</th>
      <th>Smoking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.userName %></td>
        <td><%= user_profile.gender %></td>
        <td><%= user_profile.smoking %></td>
        <td><%= link_to 'Show', user_profile %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= button_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User profile', new_user_profile_path %>
